    <p>Introduce tu nombre para entrar al chat:</p>
    
    <input id="name" type="text" placeholder="Tu nombre de usuario" required class="name-input">
    <button onclick="savedName()" class="btn-primary">Enviar</button>
</div>

<script>
    function savedName(){
        const inputName = document.getElementById("name");
        const name = inputName.value;

        if (name.trim() === "") {
            alert("Por favor, introduce tu nombre.");
            return;
        }
        
        sessionStorage.setItem("Username", name); 
        window.location.href = `/salas?username=${encodeURIComponent(name)}`; 
    }
    
    (function checkExistingSession() {
        const existingName = sessionStorage.getItem("Username");
        if (existingName) {
            window.location.href = `/salas?username=${encodeURIComponent(existingName)}`; 
        }
    })();
</script>

